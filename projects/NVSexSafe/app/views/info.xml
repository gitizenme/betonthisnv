<Alloy>
	<Tab title="Info" id="infoTab">
		<Window id="info" title="Info">
			<Widget class="infoWidget" id="info_web" src="com.orthlieb.info"/>
			<ScrollView layout="vertical" id="scrollView" showVerticalScrollIndicator="true"
			showHorizontalScrollIndicator="false" height="100%" width="80%">
				<View class="infoButtonView">
					<Button class="infoButton" image="images/GetTestedIcon.png" title="Get Tested" onClick="getTestedClicked"></Button>
				</View>
				<View class="infoButtonView">
					<Button class="infoButton" image="images/FindCondomsIcon.png" title="Find Condoms" onClick="findCondomsClicked"></Button>
				</View>
				<View class="infoButtonView">
					<Button class="infoButton" image="images/GetHelpIcon.png" title="Get Help" onClick="getHelpClicked"></Button>
				</View>
			</ScrollView>
		</Window>
	</Tab>
</Alloy>