<Alloy>
	<Window fullscreen="false" class="container" onOpen="open" title="Contact">
		<NavigationGroup id="navGroup" platform="ios">
			<Window id="contactWin" class="container" title="Contact">
				<ScrollView id="scroll">
					<View id="contactEntry" top="5" layout="vertical" class="ScrollWindow">
						<Label id="hintLabel" top="3" width="95%" height="Ti.UI.SIZE"/>
						<Label color="#000" top="6" text="Name:" left="5"/>
						<TextField id="name" hintText="enter your name"></TextField>
						<Label top="6" text="Phone #:" left="5"/>
						<TextField id="phone" hintText="enter your phone number"></TextField>
						<Label top="6" text="Message:" left="5"/>
						<TextField id="message" hintText="enter a brief message"></TextField>
					</View>
				</ScrollView>
			</Window>
		</NavigationGroup>
	</Window>
	<Widget src="com.orthlieb.navigationgroup" id="contactNavGroup"/>
</Alloy>