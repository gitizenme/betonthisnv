<Alloy>
	<Window fullscreen="false" class="container" onOpen="open" title="Results">
		<NavigationGroup id="navGroup" platform="ios">
			<Window id="navWin" title="Results" backgroundColor="#D7DF23">
				<ScrollView id="scrollView" contentHeight="auto" showVerticalScrollIndicator="true">
					<View id="view" height="Ti.UI.SIZE" layout="vertical" backgroundColor="#D7DF23">
						<Label class="title" id="orientationTitle" top="5" text="Orientation" />
						<Label class="body" id="orientationBody" />
						<Label class="title" id="activityTitle" top="20" text="Activity" />
						<Label class="body" id="activityBody" />
						<Label class="title" id="protectionTitle" top="20" text="Protection" />
						<Label class="body" id="protectionBody" />
						<Label class="title" id="riskTitle" top="20" text="Risk Factor" />
						<Label class="body" id="riskBody" />
						<Label class="title" id="safetyTitle" top="20" text="Safety" />
						<Label class="body" id="safetyBody" />
					</View>
				</ScrollView>
			</Window>
		</NavigationGroup>
	</Window>
	<Widget src="com.orthlieb.navigationgroup" id="navGroupWidget"/>
</Alloy>