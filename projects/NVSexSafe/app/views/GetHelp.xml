<Alloy>
	<Tab title="Get Help" id="getHelpTab" icon="images/GetHelpIcon.png">
		<Window id="getHelp" title="Get Help">
			<ScrollView top="7" layout="vertical" id="scrollView" showVerticalScrollIndicator="true"
			showHorizontalScrollIndicator="false" height="100%" width="100%">
				<View id="contactEntry" layout="vertical" backgroundColor="#2399A3">
					<Label id="hintLabel" top="3" width="95%" height="Ti.UI.SIZE"/>
					<Label top="6" text="Name:" left="5"/>
					<TextField top="2" left="5" id="name" hintText="enter your name"/>
					<Label top="6" text="Phone #:" left="5"/>
					<TextField top="2" left="5" id="phone" hintText="enter your phone number"/>
					<Label top="6" text="Message:" left="5"/>
					<TextField top="2" left="5" id="message" hintText="enter a brief message"/>
					<Button top="20" title="Send" onClick="clickSend">
					<Label top="20" text="Fill out this form to... need link to privacy policy."/>
				</View>
			</ScrollView>
		</Window>
	</Tab>
</Alloy>
