<Alloy>
	<View fullscreen="false" class="container" id="contactView">
		<Window id="contactWin" fullscreen="false" class="container" onOpen="open" title="Contact">
			<Button top="5" height="35dp" left="5" title="Back" onClick="clickBackAndroid"/>
			<Button top="5" height="35dp" right="5" title="Send" onClick="clickSend"/>
			<ScrollView id="scroll" top="50dp">
				<View id="contactEntry" top="5" layout="vertical" class="ScrollWindow">
					<Label id="hintLabel" top="3" width="95%" height="Ti.UI.SIZE"/>
					<Label top="6" text="Name:" left="5"/>
					<TextField id="name" hintText="enter your name"/>
					<Label top="6" text="Phone #:" left="5"/>
					<TextField id="phone" hintText="enter your phone number"/>
					<Label top="6" text="Message:" left="5"/>
					<TextField id="message" hintText="enter a brief message"/>
				</View>
			</ScrollView>
		</Window>
	</View>
	<Widget src="com.orthlieb.navigationgroup" id="contactNavGroup"/>
</Alloy>