<Alloy>
	<View fullscreen="false" class="container" id="navView">
		<Window id="navWin" fullscreen="false" class="container" onOpen="open" title="RISK FACTOR" backgroundColor="#2399A3">
			<Button top="5" height="35dp" left="5" title="Back" onClick="clickBackAndroid"/>
			<ScrollView id="scrollView" top="50dp" contentHeight="auto"
			borderRadius="8" borderColor="#000" borderWidth="8" backgroundColor="#000" >
				<View id="riskView" layout="vertical" height="1200">
					<ImageView top="10" image="/images/appicon.png"/>
					<View layout="horizontal" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
						<Label id="leftTitle" color="#E81C24">SEX</Label>
						<Label id="rightTitle" color="#E81C24">SAFE</Label>
					</View>
					<Label left="10" class="H2LEFT" id="versionLabel" text="Version:"/>
					<Label left="10" class="H2LEFT" id="descriptionLabel" text=""/>
					<Label left="10" class="H2LEFT" id="copyrightLabel" text="Copyright: "/>
					<Label left="10" class="H2LEFT" id="publisherLabel" text="Published by: "/>
					<Label left="10" class="H2LEFT" id="urlLabel" text="On the Web: " onClick="onTheWebClick" />
					<Label left="10" class="H2LEFT" id="developmentBy" top="40" text="Application development by: izen.me"/>
					<ImageView image="/images/izenme_logo-100x100.png"/>
					<Label left="10" class="H2LEFT" id="izenMeUrlLabel" text="On the Web: www.izen.me" onClick="onTheWebIzenMeClick" />
				</View>
			</ScrollView>
		</Window>
	</View>
	<Widget src="com.orthlieb.navigationgroup" id="navGroupWidget"/>
</Alloy>
