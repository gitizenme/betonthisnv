<Alloy>
	<Collection src="journal" />
	<Tab id="calendarTab" title="Calendar" icon="images/CalendarIcon.png">
		<Window id="tabWin" title="SELF CARE" layout="vertical" onOpen="open">
			<ScrollView id="scrollView" contentHeight="auto" contentWidth="auto" showVerticalScrollIndicator="true" layout="vertical">
				<View class="control" backgroundColor="#fff">
					<!-- <Button id="prevMonth" title="Prev" onClick="doPrevMonth" /> -->
					<View id="nextButtonView" top="5" left="5"  bottom="5" borderColor="#0A0A0A"  borderRadius="8" borderWidth="1" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
						<Label id="prevButtonLabel" text="Prev" onClick="doPrevMonth"/>
					</View>
					<Label id="calendarHeading" />
					<!-- <Button id="nextMonth" title="Next" onClick="doNextMonth" /> -->
					<View id="nextButtonView" top="5" right="5" bottom="5" borderColor="#0A0A0A"  borderRadius="8" borderWidth="1" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
						<Label id="nextButtonLabel" text="Next" onClick="doNextMonth"/>
					</View>
				</View>
				<View id="calendarView">
					<Widget id="current" src="jp.co.mountposition.calendar" />
				</View>
			</ScrollView>
		</Window>
	</Tab>
</Alloy>