<Alloy>
	<Tab title="Get Help" id="getHelpTab" icon="images/GetHelpIcon.png">
		<Window id="getHelp" title="Get Help">
			<ScrollView top="7" layout="vertical" id="scrollView" showVerticalScrollIndicator="true"
				contentHeight="auto" contentWidth="auto">
				<View id="contactEntry" layout="vertical" height="800" backgroundColor="#2399A3" onTouchstart="onTouchStart">
					<Label top="20" id="hintLabel" text="Fill out this form to..."/>
					<Label top="6" text="Name:" left="5"/>
					<TextField top="2" left="5" id="name" hintText="enter your name" onFocus="focusName" onReturn="focusPhoneNumber"/>
					<Label top="6" text="Phone #:" left="5"/>
					<TextField top="2" left="5" id="phone" hintText="enter your phone number" keyboardType="Ti.UI.KEYBOARD_DECIMAL_PAD" onFocus="focusPhoneNumber" onReturn="focusMessage"/>
					<Label top="6" text="Message:" left="5"/>
					<TextField top="2" left="5" id="message" hintText="enter a brief message" onFocus="focusMessage" onReturn="focusSendButton"/>
					<View top="20" borderColor="#fff"  borderRadius="8" borderWidth="2" width="Ti.UI.SIZE" height="Ti.UI.SIZE" >
						<Label top="10" left="13" right="10" bottom="5" class="oldpressLabelXLarge" text="SEND" onClick="clickSend">
					</View>
					<Label top="20" text="Need link to privacy policy."/>
				</View>
			</ScrollView>
		</Window>
	</Tab>
</Alloy>
